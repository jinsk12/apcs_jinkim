package fracCalc;
import java.util.*;
public class FracCalc {

    public static void main(String[] args)
    {
        // TODO: Read the input from the user and call produceAnswer with an equation
     	Scanner cs = new Scanner(System.in); //takes input
    	do
    	{
    	String input = cs.nextLine(); //must take in a string
    	if (input.equals("Quit"))
    		break; //ends program
    	System.out.println(produceAnswer(input));
    	} while(true); //if input is given
    	cs.close();
    }
    
    // ** IMPORTANT ** DO NOT DELETE THIS FUNCTION.  This function will be used to test your code
    // This function takes a String 'input' and produces the result
    //
    // input is a fraction string that needs to be evaluated.  For your program, this will be the user input.
    //      e.g. input ==> "1/2 + 3/4"
    //        
    // The function should return the result of the fraction after it has been calculated
    //      e.g. return ==> "1_1/4"
public static String produceAnswer(String input)
{
//add stuff here using operands
	String temp=input;
	String operand1=temp.substring(0,temp.indexOf(' '));
	temp=temp.substring(temp.indexOf(' ')+1);
	String operand2=temp.substring(0,temp.indexOf(' '));
	temp=temp.substring(temp.indexOf(' ')+1);
	String operand3=temp;
	String newOpWhole=findWhole(operand2); //where the answer will be produced
	String newOpNum=findNum(operand2);
	String newOpDen=findDen(operand2);
	String finalAnswer= "whole:"+newOpWhole+" numerator:"+newOpNum+" denominator:"+newOpDen;
	return finalAnswer;
  }

public static String findNum(String str1) { //numerator
	if(str1.contains(" ")) {
		return str1.substring(str1.indexOf(' ')+1,str1.indexOf('/'));
	}else if(str1.contains("/")) {
		return str1.substring(0,str1.indexOf('/'));
	}else {
		return "0";
	}
}
public static String findWhole(String str1) { //whole number
	if(str1.contains("_")) {
		return str1.substring(0,str1.indexOf('_'));
	}else if(str1.contains("/")) {
		return "0";
	}else {
		return str1;
	}
}
public static String findDen(String str1) { //denominator
	if(str1.contains("/")) {
		return str1.substring(str1.indexOf("/")+1);
	}else {
		return "1";
	}
	}
}
